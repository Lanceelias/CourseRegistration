
@{
    ViewData["Title"] = "Instructors";
}

<div class="text-center">
    <h1> Instructors </h1>
</div>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>InstructorId</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th>Courses</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in @Model.Instructors)
            {
                <tr>
                    <th scope="row">@item.CourseId</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.EmailAdd</td>
                    <td>@item.Courses</td>
                </tr>
            }
        </tbody>
    </table>
</div>
